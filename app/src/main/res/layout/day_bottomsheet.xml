<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/sheet_day"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@drawable/rounder"
        app:behavior_hideable="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
            <!--app:behavior_peekHeight="30dp"-->
            <ImageView
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_gravity="center|top"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_remove_24"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="오늘의 새로운 일!"
                android:textAlignment="center"
                android:textSize="17dp"
                android:padding="5dp"
                android:textColor="@color/selected_tab_text_color"
                android:fontFamily="@font/nanumsquare_acb"/>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/timePickerButton"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:drawableStart="@drawable/clock_ic"
                    android:text="시작 시간"
                    android:fontFamily="@font/nanumsquare_acb"
                    android:textColor="@color/gray_"
                    app:cornerRadius="20dp"
                    app:elevation="4dp"
                    app:strokeColor="@color/yellow_border"
                    app:strokeWidth="1dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/timePickerButton2"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:drawableStart="@drawable/clock_ic"
                    android:fontFamily="@font/nanumsquare_acb"
                    android:text="종료 시간"
                    android:textColor="@color/gray_"
                    app:cornerRadius="20dp"
                    app:elevation="4dp"
                    app:strokeColor="@color/yellow_border"
                    app:strokeWidth="1dp" />

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rectangle_3"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:elevation="4dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/yellow_border"
                app:strokeWidth="1dp">
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:inputType="text"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="알림설정"
                android:textAlignment="center"
                android:textSize="17dp"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/selected_tab_text_color"
                android:fontFamily="@font/nanumsquare_acb"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/orange"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="스마트 알림설정"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:textColor="@color/selected_tab_text_color"
                    android:fontFamily="@font/nanumsquare_acb"/>

            </LinearLayout>

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/clock_ic"
                android:layout_gravity="center"
                android:text="입력하기"
                android:fontFamily="@font/nanumsquare_acb"
                android:textColor="@color/selected_tab_text_color"/>

        </LinearLayout>




    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>