<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="265dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="265dp"
        android:background="@drawable/passbox"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/changeQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="비밀번호 변경"
        android:textColor="#72634A"
        android:textSize="18dp"
        android:textStyle="bold" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pw_cardview"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/changeQ"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="18dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="비밀번호"
                android:textAlignment="center"
                android:textColor="#72634A" />

            <EditText
                android:id="@+id/et_pass"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:textSize="12dp" />

            <ImageButton
                android:id="@+id/eye"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/eyeoff" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pw_cardview3"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/pw_cardview2"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="비밀번호 확인"
                android:textAlignment="center"
                android:textColor="#72634A" />

            <EditText
                android:id="@+id/confirm_pass"
                android:layout_width="115dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:textSize="12dp" />

            <ImageButton
                android:id="@+id/eye3"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/eyeoff" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pw_cardview2"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/pw_cardview"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="새 비밀번호"
                android:textAlignment="center"
                android:textColor="#72634A" />

            <EditText
                android:id="@+id/new_pass"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:textSize="12dp" />

            <ImageButton
                android:id="@+id/eye2"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/eyeoff" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pw_cardview3"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/changeButton"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:autoLink="none"
            android:background="#00000000"
            android:gravity="center"
            android:padding="0dp"
            android:text="변경"
            android:textColor="#545454"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:autoLink="none"
            android:background="#00000000"
            android:gravity="center"
            android:padding="0dp"
            android:text="취소"
            android:textColor="#545454"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>